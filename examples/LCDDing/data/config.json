{
  "rotary": {
    "0": {   
      "description": "Rotary Input",   
      "pin1": "D5",
      "pin2": "D6",
      "value": 10,
      "step": 10,
      "onchange": "device/0?log=rot:$v,value/led?up=$v"
    }
  },

  "value": {
    "led": {
      "value": 20,
      "min": 0,
      "max": 255,
      "onchange": "device/0?log=led:$v,displaytext/val?show=$v,pwmout/led?value=$v",
      "description": "a value"
    }
  },

  "displaytext": {
    "val": {
      "x": 0,
      "y": 1,
      "prefix": "val=",
      "postfix": "",
      "description": "Display the value"
    }
  },

  "displaydot": {
    "b": {
      "x": 15,
      "y": 0,
      "loglevel": 1,
      "description": "Display a bink"
    }
  },

  "time": {
    "0": {
      "onminute": "device/0?log=time:$v"
    }
  },


  "timer": {
    "blink": {
      "type": "LOOP",
      "waittime": "0",
      "pulsetime": "1",
      "cycletime": "3",
      "onon": "displaydot/b?show=1",
      "onoff": "displaydot/b?show=0",
      "description": "Water Timer for testing"
    }
  },

  "schedule": {
    "0": {
      "onTime": "16h",
      "onon": "device/0?log=On",
      "onoff": "device/0?log=Off"
    }
  },

  "xdigitalout": {
    "led": {
      "pin": "D0",
      "inverse": "true",
      "value": "0",
      "description": "Builtin LED is on Port D0 = GPIO16"
    }
  },

  "pwmout": {
    "led": {
      "pin": "D4",
      "range": 255,
      "value": 0,
      "inverse": "true",
      "description": "Build-in LED"
    }
  }
}